<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/background"
    android:background="#2364AA">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/loginButton"
        android:onClick="registerUser"
        android:background="@drawable/rounded_blue"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignTop="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextUsername"
        android:hint="Username"
        android:autoText="false"
        android:background="@drawable/rounded_corner"
        android:height="40dp"
        android:width="215dp"
        android:minWidth="215dp"
        android:minHeight="40dp"
        android:inputType="text"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/button"
        android:onClick="loginViewCancel"
        android:background="@drawable/rounded_blue"
        android:layout_marginTop="50dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_below="@+id/editTextPassword_conf"
        android:layout_alignRight="@+id/editTextPassword_conf"
        android:layout_alignEnd="@+id/editTextPassword_conf" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:hint="Password.."
        android:autoText="false"
        android:background="@drawable/rounded_corner"
        android:height="40dp"
        android:width="215dp"
        android:minWidth="215dp"
        android:minHeight="40dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_below="@+id/editTextUsername"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword_conf"
        android:hint="Confirm Password.."
        android:autoText="false"
        android:background="@drawable/rounded_corner"
        android:height="40dp"
        android:width="215dp"
        android:minWidth="215dp"
        android:minHeight="40dp"
        android:inputType="number"
        android:singleLine="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

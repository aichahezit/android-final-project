<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a00906732.bcit.ca.finalproject" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeekView"
            android:label="@string/title_activity_week_view" >
        </activity>
        <activity
            android:name=".DayView"
            android:label="@string/title_activity_day_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WeekView" />
        </activity>
        <activity
            android:name=".AddView"
            android:label="@string/title_activity_add_view" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WeekView" />
        </activity>
        <activity
            android:name=".RegisterView"
            android:label="@string/title_activity_register_view" >
        </activity>
    </application>

</manifest>
